{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@common/*": [
                "../common/*"
            ]
        }
    },
    "include": [
        "src",
        "tests",
        "../common/"
    ]
}